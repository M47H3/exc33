    <h1> lista de livros</h1>

    <br>

    <h2>adicionar livro a lista</h2>

    <input type="text" id="item">

<button class="add" id="add" onclick="item()">Adicionar</button>

<button class="adc" id="adc" onclick="mostrarlista()">mostrar a lista</button>
<div id="output"></div>
    <script>

let estoque = [];
        let outputDiv = document.getElementById("output");

        function item() {
            let novoItem = document.getElementById("item").value;
            estoque.push(novoItem);
            outputDiv.innerHTML = "Item adicionado ao estoque: " + novoItem;
        }
        function mostrarlista() {
            if (estoque.length === 0) {
                outputDiv.innerHTML = "O estoque est√° vazio.";
            } else {
                let listaItens = "livros no estoque:<br>";
                for (let i = 0; i < estoque.length; i++) {
                    listaItens += (i + 1) + ". " + estoque[i] + "<br>";
                }
                outputDiv.innerHTML = listaItens;
            }
        }
    </script>
